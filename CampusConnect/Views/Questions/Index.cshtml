@model IEnumerable<CampusConnect.Models.Question>

@{
    ViewData["Title"] = "Questions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Questions</h2>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" class="btn btn-success">+ Ask a Question</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No questions have been posted yet.</div>
}
else
{
    <div class="list-group">
        @foreach (var q in Model)
        {
            <a asp-action="Details" asp-route-id="@q.Id" class="list-group-item list-group-item-action mb-2 shadow-sm">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@q.Title</h5>
                    <small class="text-muted">@q.CreatedAt.ToString("MMM dd, yyyy")</small>
                </div>

                <p class="mb-1 text-truncate">@q.Content</p>

                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        Asked by @q.ApplicationUser?.FullName ?? "Anonymous"
                    </small>

                    <!-- Show tags if any -->
                    <div>
                        @foreach (var tag in q.QuestionTags.Select(qt => qt.Tag))
                        {
                            <span class="badge bg-secondary">@tag.Name</span>
                        }
                    </div>
                </div>
            </a>
        }
    </div>
}
