@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px; background: linear-gradient(to bottom right, #6a11cb, #2575fc); color: white;">
        <h2 class="text-center mb-4">CampusConnect</h2>
        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control rounded-pill" id="email" name="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control rounded-pill" id="password" name="password" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-light w-100 rounded-pill fw-bold">Login</button>
        </form>
        <div class="text-center mt-3">
            <span>Don't have an account? </span>
            <a href="/Account/Register" class="text-white fw-bold text-decoration-underline">Register</a>
        </div>
    </div>
</div>
